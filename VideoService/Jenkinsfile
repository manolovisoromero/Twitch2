pipeline {
    agent { docker { image 'maven:3.3.3' } }
    stages {
       stage('Initialize'){
        steps {
               echo 'initialize...'
        }
        
        }

         stage ('Build') {
            steps {
                sh ''' 
                cd VideoService
                mvn -Dmaven.test.failure.ignore=true install' 
                '''
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
} 
